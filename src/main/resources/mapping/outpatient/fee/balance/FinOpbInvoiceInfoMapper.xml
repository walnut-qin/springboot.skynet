        <result column="CLIENTORDERID" jdbcType="VARCHAR" property="clientOrderId"/>
    </resultMap>

    <sql id="item">
        INVOICE_NO,
        TRANS_TYPE,
        INVOICE_SEQ,
        CARD_NO,
        REG_DATE,
        NAME,
        PAYKIND_CODE,
        PACT_CODE,
        PACT_NAME,
        MCARD_NO,
        MEDICAL_TYPE,
        TOT_COST,
        PUB_COST,
        OWN_COST,
        PAY_COST,
        BACK1,
        BACK2,
        BACK3,
        REAL_COST,
        OPER_CODE,
        OPER_DATE,
        EXAMINE_FLAG,
        CANCEL_FLAG,
        CANCEL_INVOICE,
        CANCEL_CODE,
        CANCEL_DATE,
        CHECK_FLAG,
        CHECK_OPCD,
        CHECK_DATE,
        BALANCE_FLAG,
        BALANCE_NO,
        BALANCE_OPCD,
        BALANCE_DATE,
        EXT_FLAG,
        CLINIC_CODE,
        PRINT_INVOICENO,
        DRUG_WINDOW,
        ACCOUNT_FLAG,
        REPRINTNUM,
