        DEPTOWN,
        EMPLOYEEOWN,
        PAYMODE,
        GREENROAD,
        REPRINTOPER,
        REPRINTDATE,
        IP,
        PAYOPERCODE,
        CLIENTORDERID
    </sql>

    <select id="queryInvoiceInfo" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            XYHIS.FIN_OPB_INVOICEINFO
        <where>
            <if test="true">
                AND INVOICE_NO = #{invoiceNo}
            </if>
            <if test="true">
                AND TRANS_TYPE = #{transType}
            </if>
            <if test="true">
                AND INVOICE_SEQ = #{invoiceSeq}
            </if>
        </where>
    </select>
