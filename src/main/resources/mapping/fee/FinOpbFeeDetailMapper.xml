<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.fee.FinOpbFeeDetailMapper">
    <!-- 实体映射表 -->
    <resultMap id="map" type="com.kaos.his.entity.fee.FinOpbFeeDetail">
        <id column="RECIPE_NO" jdbcType="VARCHAR" property="recipeNo"/>
        <id column="SEQUENCE_NO" jdbcType="VARCHAR" property="seqNo"/>
        <id column="TRANS_TYPE" jdbcType="VARCHAR" property="transType"/>
        <result column="CARD_NO" jdbcType="VARCHAR" property="cardNo"/>
        <result column="OPER_CODE" jdbcType="VARCHAR" property="operCode"/>
        <result column="OPER_DATE" jdbcType="VARCHAR" property="operDate"/>
        <result column="ITEM_CODE" jdbcType="VARCHAR" property="itemCode"/>
        <result column="ITEM_NAME" jdbcType="VARCHAR" property="itemName"/>
    </resultMap>

    <!-- 全部字段 -->
    <sql id="allItem">
        RECIPE_NO,
        SEQUENCE_NO,
        TRANS_TYPE,
        CARD_NO,
        OPER_CODE,
        OPER_DATE,
        ITEM_CODE,
        ITEM_NAME
    </sql>

    <!-- 接口1 -->
    <select id="QueryFinOpbFeeDetail" resultMap="map">
        SELECT
        <include refid="allItem"/>
        FROM
            XYHIS.FIN_OPB_FEEDETAIL
        WHERE
            RECIPE_NO = #{recipeNo}
            AND SEQUENCE_NO = #{seqNo}
            AND TRANS_TYPE = #{transType}
    </select>

    <!-- 接口2 -->
    <select id="QueryLastFinOpbFeeDetail" resultMap="map">
        SELECT
        <include refid="allItem"/>
        FROM
            XYHIS.FIN_OPB_FEEDETAIL
        WHERE
            CARD_NO = #{cardNo}
            AND OPER_DATE = (
                SELECT
                    MAX(OPER_DATE)
                FROM
                    XYHIS.FIN_OPB_FEEDETAIL
                WHERE
                    CARD_NO = #{cardNo}
            )
    </select>
</mapper>