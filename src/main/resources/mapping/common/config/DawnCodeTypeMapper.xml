<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.skynet.api.mapper.common.config.DawnCodeTypeMapper">
    <resultMap id="map" type="com.kaos.skynet.entity.common.config.DawnCodeType">
        <id column="CONS_TYPE_ID" jdbcType="VARCHAR" property="constTypeId"/>
        <result column="CONS_TYPE_NAME" jdbcType="VARCHAR" property="constTypeName"/>
        <result column="REMARK" jdbcType="VARCHAR" property="remark"/>
        <result column="VALID_STATE" jdbcType="VARCHAR" property="valid"/>
    </resultMap>

    <sql id="item">
        CONS_TYPE_ID,
        CONS_TYPE_NAME,
        REMARK,
        VALID_STATE
    </sql>

    <select id="queryDawnCodeType" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            DAWN_CODE_TYPE
        <where>
            <if test="true">
                AND CONS_TYPE_ID = #{constTypeId}
            </if>
        </where>
    </select>
</mapper>