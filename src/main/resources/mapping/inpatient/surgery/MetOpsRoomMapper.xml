<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.inpatient.surgery.MetOpsRoomMapper">
    <resultMap id="map" type="com.kaos.his.entity.inpatient.surgery.MetOpsRoom">
        <id column="ROOM_ID" jdbcType="VARCHAR" property="roomId"/>
        <result column="ROOM_NAME" jdbcType="VARCHAR" property="roomName"/>
        <result column="DEPT_CODE" jdbcType="VARCHAR" property="deptCode"/>
        <result column="VALID_FLAG" jdbcType="VARCHAR" property="valid"/>
    </resultMap>

    <sql id="item">
        ROOM_ID,
        ROOM_NAME,
        DEPT_CODE,
        VALID_FLAG
    </sql>

    <select id="queryMetOpsRoom" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            MET_OPS_ROOM
        <where>
            <if test="true">
                AND ROOM_ID = #{roomId}
            </if>
        </where>
    </select>
</mapper>