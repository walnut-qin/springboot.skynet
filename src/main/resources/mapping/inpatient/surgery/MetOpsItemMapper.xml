<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.inpatient.surgery.MetOpsItemMapper">
    <resultMap id="map" type="com.kaos.his.entity.inpatient.surgery.MetOpsItem">
        <id column="OPERATIONNO" jdbcType="VARCHAR" property="operationNo"/>
        <result column="ITEM_CODE" jdbcType="VARCHAR" property="itemCode"/>
        <result column="ITEM_NAME" jdbcType="VARCHAR" property="itemName"/>
    </resultMap>

    <sql id="item">
        OPERATIONNO,
        ITEM_CODE,
        ITEM_NAME
    </sql>

    <select id="queryMetOpsItem" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            MET_OPS_OPERATIONITEM
        <where>
            <if test="operationNo != null">
                AND OPERATIONNO = #{operationNo}
            </if>
            <if test="itemCode != null">
                AND ITEM_CODE = #{itemCode}
            </if>
        </where>
    </select>

    <select id="queryMetOpsItems" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            MET_OPS_OPERATIONITEM
        <where>
            <if test="operationNo != null">
                AND OPERATIONNO = #{operationNo}
            </if>
        </where>
    </select>
</mapper>