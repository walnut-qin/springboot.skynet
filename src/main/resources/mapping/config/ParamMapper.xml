<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.config.ParamMapper">
    <!-- 实体映射表 -->
    <resultMap id="map" type="com.kaos.his.entity.config.Param">
        <id column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="VALUE" jdbcType="VARCHAR" property="value"/>
        <result column="VALID" jdbcType="VARCHAR" property="valid"/>
        <result column="REMARK" jdbcType="VARCHAR" property="remark"/>
    </resultMap>

    <!-- 全部字段 -->
    <sql id="allItem">
        NAME AS NAME,
        VALUE AS VALUE,
        VALID AS VALID,
        REMARK AS REMARK
    </sql>

    <!-- 接口1 -->
    <select id="QueryParam" resultMap="map">
        SELECT
        <include refid="allItem"/>
        FROM
            KAOS.CONFIG_PARAMETERS
        <where>
            <if test="paramName!=null">
                AND NAME = #{paramName}
            </if>
            <if test="validCheck!=null">
                AND VALID = #{validCheck}
            </if>
        </where>
    </select>
</mapper>